{
  "openapi": "3.0.3",
  "info": {
    "title": "Advent of Code - OpenAPI 3.0",
    "description": "This is a simple backend API that solves the puzzle of the Advent Of code challenge",
    "contact": {
      "email": "https://github.com/minirulo"
    },
    "version": "1.0.11"
  },
  "externalDocs": {
    "description": "Advent of Code",
    "url": "https://adventofcode.com/"
  },
  "servers": [
    {
      "url": "http://localhost:8008"
    }
  ],
  "tags": [
    {
      "name": "test"
    },
    {
      "name": "elf_duty",
      "description": "Check how many duties overlap when the elfs pair with each other",
      "externalDocs": {
        "description": "Puzzle",
        "url": "https://adventofcode.com/2022/day/4"
      }
    },
    {
      "name": "warehouse_stack",
      "description": "Check the last crates in the stack after the operatior follows the transactions",
      "externalDocs": {
        "description": "Puzzle",
        "url": "https://adventofcode.com/2022/day/5"
      }
    },
    {
      "name": "device",
      "description": "Find the position of the unique chain of characters within a message",
      "externalDocs": {
        "description": "Puzzle",
        "url": "https://adventofcode.com/2022/day/6"
      }
    }
  ],
  "paths": {
    "/": {
      "post": {
        "tags": [
          "test"
        ],
        "requestBody": {
          "content": {
            "text/plain": {
              "schema": {
                "type": "string",
                "format": "binary"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Successful operation",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Overlap"
                }
              }
            }
          }
        }
      }
    },
    "/elfs": {
      "post": {
        "tags": [
          "elf_duty"
        ],
        "requestBody": {
          "content": {
            "text/plain": {
              "schema": {
                "type": "string",
                "format": "binary"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Successful operation",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Overlap"
                }
              }
            }
          }
        }
      }
    },
    "/stacks": {
      "post": {
        "tags": [
          "warehouse_stack"
        ],
        "requestBody": {
          "content": {
            "text/plain": {
              "schema": {
                "type": "string",
                "format": "binary"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Successful operation",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Crates"
                }
              }
            }
          }
        }
      }
    },
    "/device": {
      "post": {
        "tags": [
          "device"
        ],
        "requestBody": {
          "content": {
            "text/plain": {
              "schema": {
                "type": "string",
                "format": "binary"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Successful operation",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ParsedPosition"
                }
              }
            }
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "Overlap": {
        "type": "object",
        "properties": {
          "result": {
            "type": "integer",
            "format": "int64",
            "description": "Number of overlapped duties"
          }
        }
      },
      "Crates": {
        "type": "object",
        "properties": {
          "result": {
            "type": "string",
            "description": "Last crates order after transactions",
            "example": "ACPBDF"
          }
        }
      },
      "ParsedPosition": {
        "type": "object",
        "properties": {
          "result": {
            "type": "integer",
            "format": "int64",
            "description": "Position of the unique chain in message"
          }
        }
      }
    }
  }
}