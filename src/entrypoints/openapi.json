{
  "openapi": "3.0.3",
  "info": {
    "title": "Advent of Code - OpenAPI 3.0",
    "description": "This is a simple backend API that solves the puzzle of the Advent Of code challenge",
    "contact": {
      "email": "https://github.com/minirulo"
    },
    "version": "1.0.11"
  },
  "externalDocs": {
    "description": "Advent of Code",
    "url": "https://adventofcode.com/"
  },
  "servers": [
    {
      "url": "http://localhost:8008"
    }
  ],
  "tags": [
    {
      "name": "test"
    },
    {
      "name": "elf_duty",
      "description": "Check how many duties overlap when the elfs pair with each other",
      "externalDocs": {
        "description": "Puzzle",
        "url": "https://adventofcode.com/2022/day/4"
      }
    },
    {
      "name": "warehouse_stack",
      "description": "Check the last crates in the stack after the operatior follows the transactions",
      "externalDocs": {
        "description": "Puzzle",
        "url": "https://adventofcode.com/2022/day/5"
      }
    },
    {
      "name": "device",
      "description": "Find the position of the unique chain of characters within a message",
      "externalDocs": {
        "description": "Puzzle",
        "url": "https://adventofcode.com/2022/day/6"
      }
    }
  ],
  "paths": {
    "/api/v1/elfs/{overlap}": {
      "post": {
        "tags": [
          "elf_duty"
        ],
        "parameters": [
          {
            "name": "overlap",
            "in": "path",
            "description": "Whether to check for fully overlapped duties [true] or not [anything else]",
            "required": false,
            "default": "true",
            "schema": {
              "type": "string"
            }
          }
        ],
        "requestBody": {
          "content": {
            "text/plain": {
              "schema": {
                "type": "string",
                "format": "binary"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Successful operation",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Overlap"
                }
              }
            }
          }
        }
      }
    },
    "/api/v1/stacks/{crateMover}": {
      "post": {
        "tags": [
          "warehouse_stack"
        ],
        "parameters": [
          {
            "name": "crateMover",
            "in": "path",
            "description": "Model of the CrateMover to use [ 9000 or 9001 ]",
            "required": false,
            "default": 9000,
            "schema": {
              "type": "integer",
              "format": "int64"
            }
          }
        ],
        "requestBody": {
          "content": {
            "text/plain": {
              "schema": {
                "type": "string",
                "format": "binary"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Successful operation",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Crates"
                }
              }
            }
          }
        }
      }
    },
    "/api/v1/device/{length}": {
      "post": {
        "tags": [
          "device"
        ],
        "parameters": [
          {
            "name": "length",
            "in": "path",
            "description": "Length of the unique packet / message to look for in the message",
            "required": false,
            "default": 4,
            "schema": {
              "type": "integer",
              "format": "int64"
            }
          }
        ],
        "requestBody": {
          "content": {
            "text/plain": {
              "schema": {
                "type": "string",
                "format": "binary"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Successful operation",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ParsedPosition"
                }
              }
            }
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "Overlap": {
        "type": "object",
        "properties": {
          "result": {
            "type": "integer",
            "format": "int64",
            "description": "Number of overlapped duties"
          }
        }
      },
      "Crates": {
        "type": "object",
        "properties": {
          "result": {
            "type": "string",
            "description": "Last crates order after transactions",
            "example": "ACPBDF"
          }
        }
      },
      "ParsedPosition": {
        "type": "object",
        "properties": {
          "result": {
            "type": "integer",
            "format": "int64",
            "description": "Position of the unique chain in message"
          }
        }
      }
    }
  }
}